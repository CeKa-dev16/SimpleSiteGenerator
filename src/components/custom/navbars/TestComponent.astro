---
import { Image } from "astro:assets";
import profile from "../../../images/profile.png"
---

<nav>
  <ul>
    <li><a href="#">Home</a></li>
    <li><a href="#">Services</a></li>
    <li><a href="#">Pictures</a></li>
    <li><a href="#">Market</a></li>
  </ul>
  <div class="profile">
    <Image src={profile} alt="pfp"></Image>
    <p><a href="#">Nombre</a></p>
  </div>
</nav>

<style>
  nav {
    background-color: rgb(255, 255, 255);
    display: flex;
    justify-content: space-between;
    padding-inline: 1ch;
    height: 3ch;
  }
  
  ul {
    display: flex;
    list-style: none;
    gap: 2ch;
    align-items: center;
  }

  a {
    text-decoration: none;
    color: black;
    position: relative;
  }

  a::after {
    content: "";
    width: 0%;
    left: 50%;
    bottom: 2px;
    height: 2px;
    position: absolute;
    background-color: black;
    transition: all .2s ease;
  }

  a:hover::after {
    width:  110%;
    left: -5%;
  }

  img {
    height: 90%;
    width: auto;
    border-radius: 20ch;
  }

  .profile {
    display: flex;
    gap: .5ch;
    align-items: center;
  }
</style>